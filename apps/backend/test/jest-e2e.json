{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "isolatedModules": true
      }
    ]
  },
  "moduleNameMapper": {
    "^@app/prisma(|/.*)$": "<rootDir>/../src/prisma/$1"
  }
}