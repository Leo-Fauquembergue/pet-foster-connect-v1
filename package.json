{
  "name": "famille-accueil-animaux",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "// --- Build Shared Types First ---": "",
    "build:shared": "npm run build --workspace=@projet/shared-types",
    "// --- Backend ---": "",
    "dev:backend": "npm run build:shared && npm run start:dev --workspace=backend",
    "build:backend": "npm run build:shared && npm run build --workspace=backend",
    "// --- Frontend ---": "",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build:frontend": "npm run build:shared && npm run build --workspace=frontend",
    "// --- Docker & Prisma ---": "",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "prisma:generate": "npm run prisma generate --workspace=backend",
    "prisma:migrate": "npm run prisma migrate dev --workspace=backend",
    "prisma:studio": "npm run prisma studio --workspace=backend",
    "// --- Quality ---": "",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "bash ./apps/backend/test/setup-e2e.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/jest": "^30.0.0",
    "@types/nodemailer": "^7.0.9",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^11.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "*",
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "dependencies": {
    "@nestjs/mapped-types": "*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "nodemailer": "^7.0.13",
    "react-icons": "^5.5.0",
    "zod": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@app/prisma(|/.*)$": "<rootDir>/apps/backend/src/prisma/$1"
    }
  }
}
